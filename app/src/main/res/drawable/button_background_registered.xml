<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado habilitado -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccesible" />
            <corners android:radius="12dp" /> <!-- Bordes redondeados -->
            <stroke android:width="2dp" android:color="@color/colorBorderAccesible" />
        </shape>
    </item>
    <!-- Estado deshabilitado -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccesibleDisabled" />
            <corners android:radius="12dp" /> <!-- Bordes redondeados -->
            <stroke android:width="2dp" android:color="@color/colorBorderAccesibleDisabled" />
        </shape>
    </item>
</selector>
